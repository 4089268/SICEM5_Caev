@page "/Boletines/Nuevo"
@namespace Sicem_Blazor.Boletines.Views
@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Charts
@using Sicem_Blazor.Models.PagoLinea
@using Sicem_Blazor.Boletines.Views.Partials

<div class="layoutPage">

    <div class="title-page" style="grid-area: 1/1/2/3;">Registrar Nuevo Boletin</div>

    @* ****** Acciones ****** *@
    <div class="border rounded bg-white px-2 d-flex align-items-center" style="grid-area: 2/1/3/3;">
        <button class="btn btn-secondary px-4 py-3" @onclick="GoBackClick">
            <i class="fa fa-arrow-left mr-2" />
            Regresar
        </button>
    </div>

    <div class="border rounded bg-white px-2 d-flex flex-column align-items-center" style="grid-area: 3/1/4/2;">
        <div class="w-100 p-2 d-flex flex-column border-bottom pb-3">
            <h4 class="mx-auto text-uppercase font-weight-bold mt-2 py-2">Destinatarios</h4>
            <button class="btn btn-success p-2 mr-auto me-auto">
                <i class="fa fa-plus mr-2" />
                Cargar destinatarios
            </button>
        </div>

        <div class="d-flex flex-column h-100 w-100 overflow-auto">
            @for(int i = 1; i<=4; i++ )
            {
                <div class="mailbox-list__single d-flex justify-content-between mt-3 border-bottom pb-3 shadow-sm">
                    <div class="mail-authorBox d-flex align-items-center">
                        <div class="checkbox-theme-default custom-checkbox mr-2">
                            <input class="checkbox" type="checkbox" id="mail-1">
                        </div>
                        <span class="author-info">
                            <img src="https://ui-avatars.com/api/?name=Dest&color=333" alt="admin author" height="40">
                        </span>
                        <div class="mail-content">
                            <h4 class="mail-title">
                                <span class="badge badge-transparent badge-round">+52 8341111313</span>
                            </h4>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>

    @* ****** Detalle Mensaje ****** *@
    <div class="border rounded bg-white overflow-auto p-4" style="grid-area: 3/2/4/3;">


        <div class="d-flex flex-column bg-white shadow p-4" style="max-width:1000px; margin:0 auto; font-size:1.5rem;">
            
            <div class="d-flex flex-column align-items-start justify-content-between">
                
                <div class="pt-1 pb-2">
                    <h2>Datos del Boletin</h2>
                </div>

                <div class="mb-3 w-50 px-2">
                    <label for="title" class="form-label">Titulo</label>
                    <input type="text" class="form-control" id="title" placeholder="Boletin 1">
                </div>

                <div class="mb-3 w-100 px-2">
                    <label for="mensaje" class="form-label">Mensaje</label>
                    <textarea class="form-control" id="mensaje" rows="4"></textarea>
                </div>
            </div>

            <div class="d-flex flex-column mt-4">
                <div class="pt-1 pb-2">
                    <h2>Archivos adjuntos:</h2>
                </div>

                <div class="dm-upload mb-25">
                    <label for="file" class="dm-upload-avatar media-import mb-25 dropzone-lg-s">
                        <p class="color-light mt-0 fs-15">Seleccione un archivo o arrastrelo aqui.</p>
                        <input type="file" id="file" name="upload-avatar-input" class="upload-avatar-input d-none">
                    </label>
                </div>

            </div>

            <div class="d-flex align-items-center justify-content-center my-3 border-top pt-4">
                <button class="btn btn-success px-4 py-3" style="font-size:1.4rem;">
                    <i class="fa fa-paper-plane mr-1" />
                    <span class="font-weight-bold">Registar</span>
                </button>
            </div>

        </div>

    </div>

    <div style="grid-template: 5/1/6/3;"></div>
</div>


@* ****** Dialogos y ventanas secundarias ****** *@
<BusyIndicator Busy="@busyDialog" ContentText="Cargando datos...." />
<style>
    .layoutPage
    {
        display: grid;
        grid-template-columns: 30rem calc(100% - 30rem);
        grid-template-rows: 3rem 5rem calc(100% - 8rem);
        grid-gap: 0.5rem;
        width: 100%;
        height: 100%;
        padding-bottom: 1rem;
    }

    .media-import {
        margin: 10px auto 30px;
        margin-bottom: 30px;
        position: relative;
        padding: 10px 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        min-height: 180px;
        border: 2px dashed #C6D0DC;
        background-color: var(--color-white);
        border-radius: 10px;
    }
</style>