@namespace Sicem_Blazor.Boletines.Views.Partials

<div class="border rounded bg-white p-2 shadow-sm m-1">
    <div class="d-flex p-2">
        <div class="avatar avatar-circle mr-2 me-2">
            <img src="https://ui-avatars.com/api/?name=Sicem&color=333&rounded=true" class="rounded-circle wh-46 d-flex bg-opacity-primary" alt="image">
                <div class="badge-direction-bottom">
                <span class="chat-badge-dot avatar-online"></span>
            </div>
        </div>
        <div class="d-flex">
            <div class="users-list-body-title w-100">
                <h4>@Title</h4>
                <div class="text-limit" data-maxlength="10">
                    <p class="mb-0"><span>Lorem ipsum dolor us was they amet</span>...</p>
                </div>
            </div>
            <div class="d-flex flex-column align-items-center justify-content-between">
                <small>14:45 pm</small>
                <div class="mt-1 d-flex justify-content-end">
                    <span class="badge badge-success mx-2">5</span>
                    <span class="badge badge-danger mx-2">2</span>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title {get;set;} = "";
    
}