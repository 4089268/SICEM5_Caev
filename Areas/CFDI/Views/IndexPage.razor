@namespace Sicem_Blazor.CFDI.Pages
@page "/CFDI"
@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Charts
@using System.Threading.Tasks
@using Sicem_Blazor.CFDI.Models

<div class="layout-page1">

    <div class="title-page" style="grid-area:1/1/2/2;">CONSULTA FACTURAS CFDI</div>

    <div class="border rounded bg-white px-2 d-flex align-items-center" style="grid-area:2/1/3/2;">
        <SeleccionarFecha ProcesarParam="@Procesar" />
    </div>

    @* ****** Acciones ****** *@
    <div class="border rounded bg-white d-flex align-items-center" style="grid-area:3/1/4/2;">
        <MatButton Class="mx-2" style="min-width: 130px;" Raised="true" @onclick="ExportarExcel_Click">Exportar Excel</MatButton>
    </div>

    @* ****** DataGrid ****** *@
    <div class="border rounded bg-white p-2 d-flex" style="grid-area:4/1/6/2;">
        <SfGrid @ref="dataGrid" DataSource="@datosOficina" TValue="ResumenFactura" AllowResizing="true" AllowSorting="true"
                AllowFiltering="false" AllowExcelExport="true" Height="100%" Width="100%" EnableHover="true">
            <GridColumns>
                <GridColumn HeaderText="" TextAlign="TextAlign.Center" Width="40">
                    <Template>
                        @{
                            var data = (context as ResumenFactura);
                            if(data.Id > 0 && data.Id < 999) {
                                @switch (data.Estatus) {

                                    case ResumenOficinaEstatus.Completado:
                                        <i class="fas fa-check-circle" style="color:green; font-size:1.5rem;"></i>
                                        break;

                                    case ResumenOficinaEstatus.Error:
                                        <i class="fas fa-exclamation-circle" style="color:red; font-size:1.5rem;"></i>
                                        break;

                                    default:
                                        <div class="spinner-border p-2" role="status"> </div>
                                        break;
                                }
                            }
                        }
                    </Template>
                </GridColumn>
                <GridColumn Field="@nameof(ResumenFactura.Oficina)" HeaderText="Oficina" TextAlign="TextAlign.Left" Width="200" />
                <GridColumn Field="@nameof(ResumenFactura.Sucursal)" HeaderText="Sucursal" TextAlign="TextAlign.Right" Width="200"/>
                <GridColumn Field="@nameof(ResumenFactura.TotalFacturas)" HeaderText="Total Facturas" TextAlign="TextAlign.Right" Width="125" Format="n0" />
                <GridColumn Field="@nameof(ResumenFactura.FactsPorTimbrara)" HeaderText="Fact Por Timbrar" TextAlign="TextAlign.Right" Width="115" Format="n0" />
                <GridColumn Field="@nameof(ResumenFactura.FactsTimbrado)" HeaderText="Fact Timbradas" TextAlign="TextAlign.Right" Width="115" Format="n0" />
                <GridColumn Field="@nameof(ResumenFactura.FactsCancelado)" HeaderText="Fact Canceladas" TextAlign="TextAlign.Right" Width="115" Format="n0" />

                <GridColumn Field="@nameof(ResumenFactura.SubTotal)" HeaderText="Subtotal" TextAlign="TextAlign.Center" Width="135" Format="c2" />
                <GridColumn Field="@nameof(ResumenFactura.Iva)" HeaderText="IVA" TextAlign="TextAlign.Center" Width="135" Format="c2" />
                <GridColumn Field="@nameof(ResumenFactura.Total)" HeaderText="Total" TextAlign="TextAlign.Center" Width="135" Format="c2" />
                <GridColumn HeaderText="Acciones" TextAlign="TextAlign.Left" Width="230">
                    <Template>
                        @{
                            var data = (context as ResumenFactura);
                            if (data.Id > 0 && data.Id < 90) {
                                <div class="d-flex p-1">
                                    <button type="button" class="btn btn-primary btn-sm mx-1" data-toggle="tooltip" data-placement="top" title="Detalle Facturas" @onclick="@(e => VentanaDetalle_Click(data))">
                                        <i class="fa fa-bookmark" aria-hidden="true"></i>
                                    </button>
                                </div>
                            }
                        }
                    </Template>
                </GridColumn>
            </GridColumns>
        </SfGrid>
    </div>

</div>


@* ****** Dialogos y ventanas secundarias ****** *@
<BusyIndicator Busy="@busyDialog" ContentText="Cargando datos...." />
<CascadingValue Value="@f1" Name="fechaDesde">
    <CascadingValue Value="@f2" Name="fechaHasta">
        @if(vtnDetalleFacturasVisible)
        {
            <DetalleFacturasVtn
                Titulo="Detalle Facturas"
                CerrarModal="@((e) => vtnDetalleFacturasVisible = false)"
                DatosGrid="@DetalleFacturaData.ToList()"
                Enlace="@EnlaceSeleccionado"
            />
        }
    </CascadingValue>
</CascadingValue>