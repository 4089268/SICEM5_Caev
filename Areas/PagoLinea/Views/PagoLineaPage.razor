@page "/PagoLinea"
@namespace Sicem_Blazor.PagoLinea.Views
@using Syncfusion.Blazor.Grids
@using BlazorBootstrap
@using System.Threading.Tasks
@using Sicem_Blazor.PagoLinea.Models
@using Sicem_Blazor.PagoLinea.Data

<div class="layout-page1">

    <div class="title-page" style="grid-area:1/1/2/2;">CONSULTA DE INGRESOS DE PAGO EN LINEA</div>

    <div class="border rounded bg-white px-2 d-flex align-items-center" style="grid-area:2/1/3/2;">
        <SeleccionarFecha ProcesarParam="@Procesar" />
    </div>

    @* ****** Acciones ****** *@
    <div class="border rounded bg-white d-flex align-items-center" style="grid-area:3/1/4/2;">
        <MatButton Class="mx-2" style="min-width: 130px;" Raised="true" @onclick="ExportarExcel_Click">Exportar Excel</MatButton>
        <MatButton Class="mx-2" style="min-width: 130px;" Raised="true" Disabled="true">Generar Reporte</MatButton>
    </div>

    @* ****** DataGrid ****** *@
    <div class="border rounded bg-white p-2 d-flex" style="grid-area:4/1/5/2;">
        <SfGrid @ref="DataGrid" DataSource="@DatosRecaudacion" TValue="ResumeOffice" AllowResizing="true" AllowSorting="true" AllowFiltering="false" AllowExcelExport="true" Height="100%" Width="100%" EnableHover="true">
            <Syncfusion.Blazor.Grids.GridColumns>
                <Syncfusion.Blazor.Grids.GridColumn HeaderText="" TextAlign="TextAlign.Center" Width="40">
                    <Template>
                        @{
                            var data = (context as ResumeOffice);
                            if(data.Id > 0 && data.Id < 999) {
                                @switch (data.Estatus) {

                                    case ResumenOficinaEstatus.Completado:
                                        <i class="fas fa-check-circle" style="color:green; font-size:1.5rem;"></i>
                                        break;

                                    case ResumenOficinaEstatus.Error:
                                        <i class="fas fa-exclamation-circle" style="color:red; font-size:1.5rem;"></i>
                                        break;

                                    default:
                                        <div class="spinner-border p-2" role="status"> </div>
                                        break;
                                }
                            }
                        }
                    </Template>
                </Syncfusion.Blazor.Grids.GridColumn>
                <Syncfusion.Blazor.Grids.GridColumn Field="@nameof(ResumeOffice.Oficina)" HeaderText="Oficina" TextAlign="TextAlign.Left" Width="170" />
                
                <Syncfusion.Blazor.Grids.GridColumn Field="@nameof(ResumeOffice.UsuariosPropios)" HeaderText="Usu Propios" TextAlign="TextAlign.Right" Width="115" Format="n0" />
                <Syncfusion.Blazor.Grids.GridColumn Field="@nameof(ResumeOffice.ImporteOtros)" HeaderText="Imp Propios" TextAlign="TextAlign.Right" Width="125" Format="c2" />

                <Syncfusion.Blazor.Grids.GridColumn Field="@nameof(ResumeOffice.UsuariosOtros)" HeaderText="Usu Otros" TextAlign="TextAlign.Right" Width="115" Format="n0" />
                <Syncfusion.Blazor.Grids.GridColumn Field="@nameof(ResumeOffice.ImporteOtros)" HeaderText="Imp Otros" TextAlign="TextAlign.Right" Width="125" Format="c2" />

                <Syncfusion.Blazor.Grids.GridColumn Field="@nameof(ResumeOffice.Usuarios)" HeaderText="Usuarios Total" TextAlign="TextAlign.Center" Width="125" Format="n0" />

                <Syncfusion.Blazor.Grids.GridColumn Field="@nameof(ResumeOffice.Importe)" HeaderText="Importe Total" TextAlign="TextAlign.Center" Width="135" Format="c2" />
                <Syncfusion.Blazor.Grids.GridColumn Field="@nameof(ResumeOffice.Cobrado)" HeaderText="Importe Cobrado" TextAlign="TextAlign.Center" Width="135" Format="c2" />
                <Syncfusion.Blazor.Grids.GridColumn HeaderText="Acciones" TextAlign="TextAlign.Left" Width="70">
                    <Template>
                        @{
                            var data = (context as ResumeOffice);
                            if (data.Id > 0 && data.Id < 90) {
                                <div class="d-flex p-1">
                                    <button type="button" class="btn btn-primary btn-sm mx-1" data-toggle="tooltip" data-placement="top" title="Detalle" disabled="@(data.Estatus != ResumenOficinaEstatus.Completado )" @onclick="@(e => HandleShowDetails(data))">
                                        <i class="fa fa-table" aria-hidden="true"></i>
                                    </button>
                                </div>
                            }
                        }
                    </Template>
                </Syncfusion.Blazor.Grids.GridColumn>
            </Syncfusion.Blazor.Grids.GridColumns>
        </SfGrid>
    </div>


    <!--- Process files -->
    <div class="container-fluid border p-2" style="grid-area:5/1/6/2;">
        <div class="w-100 h-100">
            <BarChart @ref="barChart" Height="300" Style="width:100%" />
        </div>
    </div>

</div>


@* ****** Dialogos y ventanas secundarias ****** *@
<BusyIndicator Busy="@busyDialog" ContentText="Cargando datos...." />
<DetallePagosVtn @ref="detallePagosVtn" CerrarModal="HandleClosedDetallePagos" />