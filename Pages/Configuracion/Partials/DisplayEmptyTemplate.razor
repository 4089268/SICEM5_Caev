@namespace Sicem_Blazor.Pages.Configuracion.Partials

<div class="container">
    <div class="row">
        <div class="p-2 col-12" style="height:80px;">
            <label class="pb-1" style="font-size:1.5em;">Titulo</label>
            <SfTextBox Multiline=false Placeholder="Titulo" Readonly="true"></SfTextBox>
        </div>
        <div class="overflow-auto p-2 col-12">
            <label class="pb-1" style="font-size:1.5em;">Mensaje</label>
            <SfTextBox Multiline=true Placeholder="Mensaje a notificar" Style="height:20rem;" Readonly="true"></SfTextBox>
        </div>

        <div class="d-flex col-12 pl-5">
            <input class="form-check-input" type="checkbox" id="chbUseImage" disabled>
            <label class="form-check-label ml-2" style="font-size: 1.25em;" for="chbUseImage">
                Usa Imagen
            </label>
        </div>

    </div>
</div>